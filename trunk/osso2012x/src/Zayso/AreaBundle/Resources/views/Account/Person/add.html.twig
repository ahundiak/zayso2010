{% form_theme form 'ZaysoAreaBundle:Form:fields.html.twig' %}

{% extends 'ZaysoAreaBundle:Layout:layout.html.twig' %}

{% block title %}ZaysoArea - AccountPerson - Add{% endblock %}

{% block content %}
<div>
<form action="{{ path('zayso_area_account_person_add') }}" method="post" {{ form_enctype(form) }}>
<table border="1" style="width: 800px;">
<tr><th colspan="3">Add Person to Account</th></tr>
<tr>
    <td> {{ form_label (form.aysoid) }}</td>
    <td> {{ form_widget(form.aysoid) }}</td>
    <td>
        Required.<br />
        8 digit AYSO volunteer number. <br />
        Available from www.eayso.org<br />
        {{ form_errors(form.aysoid) }}
    </td>
</tr>
<tr>
    <td> {{ form_label (form.firstName) }}</td>
    <td> {{ form_widget(form.firstName) }}</td>
    <td>
        Legal name, should match eAYSO.<br />
        {{ form_errors(form.firstName) }}
    </td>
</tr>
<tr>
    <td> {{ form_label (form.lastName) }}</td>
    <td> {{ form_widget(form.lastName) }}</td>
    <td>
        Legal name, should match eAYSO.<br />
        {{ form_errors(form.lastName) }}
    </td>
</tr>
<tr>
    <td> {{ form_label (form.nickName) }}</td>
    <td> {{ form_widget(form.nickName) }}</td>
    <td>
        Used in place of first name for assignments.<br />
        {{ form_errors(form.nickName) }}
    </td>
</tr>
<tr>
    <td> {{ form_label (form.email) }}</td>
    <td> {{ form_widget(form.email) }}</td>
    <td>
        Required.<br />
        Should match your eAYSO email.<br />
        {{ form_errors(form.email) }}
    </td>
</tr>
<tr>
    <td> {{ form_label (form.cellPhone) }}</td>
    <td> {{ form_widget(form.cellPhone) }}</td>
    <td>
        Highly recommended.<br />
        {{ form_errors(form.cellPhone) }}
    </td>
</tr>
<tr><td colspan="3"></td></tr>
<tr>
    <td> {{ form_label (form.region) }}</td>
    <td> {{ form_widget(form.region) }}</td>
    <td>
        Required.<br />
        {{ form_errors(form.region) }}
    </td>
</tr>
<tr>
    <td> {{ form_label (form.refBadge) }}</td>
    <td> {{ form_widget(form.refBadge) }}</td>
    <td>
        Will be verified from eAYSO.<br />
        {{ form_errors(form.refBadge) }}
    </td>
</tr>
<<tr>
    <td> {{ form_label (form.accountRelation) }}</td>
    <td> {{ form_widget(form.accountRelation) }}</td>
    <td>
        Usually family.<br />
        {{ form_errors(form.accountRelation) }}
    </td>
</tr>
<tr>
  <td>&nbsp;</td>
  <td>&nbsp;</td>
  <td align="center"><input type="submit" name="accountPersonAddSubmit" value="Add Person to Account" />
</tr>
<tr><td colspan="3">{{ form_errors(form) }}</td></tr>
</table>
{{ form_rest(form) }}
</form>
<br />
</div>
<div>
    <h3>Instructions</h3>
    <p>
        Adding a person to your account will allow you to sign them up for games without them needing to have
        their own account.
    </p>
</div>

{% endblock %}
