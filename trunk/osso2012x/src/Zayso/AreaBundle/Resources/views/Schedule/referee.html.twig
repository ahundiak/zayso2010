{% extends 'ZaysoAreaBundle:Layout:layout.html.twig' %}

{% block title %}Area - Schedule{% endblock %}

{% block content %}
<div>
<div>
<form method="post" action="{{ path('zayso_area_schedule_referee_list') }}">
<table border="1" class="form_table" width="800" id="schedule-referee-search">
    <tr><th colspan="1">Search Referee Schedule</th></tr>
    <tr><td>
<table border="1" style="margin: 0px; padding: 0px;">
    <tr>
        <td>
            From:
            <select name="refSchedSearchData[date1]">
                {{ format.formOptions(datesPickList,refSchedSearchData.date1) | raw }}
            </select>
        </td><td>
            To:
            <select name="refSchedSearchData[date2]">
                {{ format.formOptions(datesPickList,refSchedSearchData.date2) | raw }}
            </select>
        </td><td>
            Sort By:
            <select name="refSchedDataSearch[sortBy]">
                {{ format.formOptions(sortByPickList,refSchedSearchData.sortBy) | raw }}
            </select>
        </td>
        <td width="200" align="center">Game Count: {{ gameCount }}</td>
    </tr>
</table>
    </td></tr>
    <tr><td>
        <table border="1" style="margin: 0;"><tr>
        {% for region in regions %}
            <td width="75" align="center">{{ gen.genRegionCheckBox(region) | raw }}</td>
        {% endfor %}
        </tr></table>
    </td></tr>
    <tr><td>
<table style="margin: 0px; padding: 0px;" ><tr><td>
        <table border="1" style="margin: 0;"><tr>
        {% for age in ages %}
            <td width="40" align="center">{{ gen.genAgeCheckBox(age) | raw }}</td>
        {% endfor %}
        </tr></table>
</td><td>
        <table border="1" style="margin: 0;"><tr>
        {% for gender in genders %}
            <td width="40" align="center">{{ gen.genGenderCheckBox(gender) | raw }}</td>
        {% endfor %}
        </tr></table>
</td></tr></table>
     </td></tr>
    <tr>
        <td align="center"><input type="submit" name="ref_schedule_submit" value="Search" /></td>
    </tr>
</table>
</form>
</div>
<div>
<table border="1" class="form_table" width="800" id="schedule-referee-list">
    <tr><th colspan="6">Referee Schedule</th></tr>
    <tr>
        <td>Game</td>
        <td>Date</td>
        <td>Time</td>
        <td>Field</td>
        <td>Home/Away Teams</td>
        <td>Referees</td>
    </tr>
    {% for game in games %}
        <tr>
            <td>{{ game.getNum()  }}</td>
            <td>{{ format.date(game.getDate()) }}</td>
            <td>{{ format.time(game.getTime()) }}</td>
            <td>{{ game.getFieldDesc() }}</td>
            <td>{{ gen.genTeam(game.getHomeTeam()) }}<br />
                {{ gen.genTeam(game.getAwayTeam()) }}</td>
            <td>{{ gen.genReferees(game) | raw }}</td>
        </tr>
    {% endfor %}
</table>
</div>
</div>
{% endblock %}
