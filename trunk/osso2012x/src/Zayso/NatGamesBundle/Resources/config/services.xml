<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="account.manager" class="Zayso\NatGamesBundle\Component\Manager\AccountManager" public="true">
            <argument type="service" id="doctrine.orm.osso2012_entity_manager" />
        </service>
        
        <service id="zayso.natgames.account.import" class="Zayso\NatGamesBundle\Component\Import\AccountImport" public="true">
            <argument type="service" id="account.manager" />
        </service>

        <service id="schedule2010.import" class="Zayso\NatGamesBundle\Component\Import\Schedule2010Import" public="true">
            <argument type="service" id="doctrine.orm.osso2012_entity_manager" />
        </service>

        <service id="account.create.formtype" class="Zayso\NatGamesBundle\Component\Form\Type\Account\AccountCreateFormType" public="true">
            <argument type="service" id="doctrine.orm.osso2012_entity_manager" />
        </service>

        <service
            id     = "admin.account.edit.formtype"
            class  = "Zayso\NatGamesBundle\Component\Form\Type\Account\AdminAccountEditFormType"
            public = "true">
            <argument type="service" id="doctrine.orm.osso2012_entity_manager" />
        </service>

        <service
            id     = "account.person.add.formtype"
            class  = "Zayso\NatGamesBundle\Component\Form\Type\Account\AccountPersonAddFormType"
            public = "true">
            <argument type="service" id="doctrine.orm.osso2012_entity_manager" />
        </service>
        
       <service
            id     = "account.person.listitem.formtype"
            class  = "Zayso\NatGamesBundle\Component\Form\Type\Account\AccountPersonListItemFormType"
            public = "true">
            <argument type="service" id="doctrine.orm.osso2012_entity_manager" />
        </service>
        
       <service
            id     = "account.person.list.formtype"
            class  = "Zayso\NatGamesBundle\Component\Form\Type\Account\AccountPersonListFormType"
            public = "true">
            <argument type="service" id="doctrine.orm.osso2012_entity_manager" />
            <argument type="service" id="account.person.listitem.formtype" />
        </service>
        
        <service
            id     = "account.profile.contact.formtype"
            class  = "Zayso\NatGamesBundle\Component\Form\Type\Account\AccountProfileContactFormType"
            public = "true">
            <argument type="service" id="doctrine.orm.osso2012_entity_manager" />
        </service>
        
        <service
            id     = "account.profile.password.formtype"
            class  = "Zayso\NatGamesBundle\Component\Form\Type\Account\AccountProfilePasswordFormType"
            public = "true">
            <argument type="service" id="doctrine.orm.osso2012_entity_manager" />
        </service>
        
        <service
            id     = "account.profile.ayso.formtype"
            class  = "Zayso\NatGamesBundle\Component\Form\Type\Account\AccountProfileAysoFormType"
            public = "true">
            <argument type="service" id="doctrine.orm.osso2012_entity_manager" />
        </service>

    </services>
</container>
