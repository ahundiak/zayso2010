{% extends 'ZaysoNatGamesBundle:Layout:layout.html.twig' %}

{% form_theme form 'ZaysoCoreBundle:Layout:fields.html.twig' %}

{% block title %}NatGames - Classes{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {% stylesheets output="bundles/zaysocore/css/forms2.css"
        '@ZaysoCoreBundle/Resources/public/css/forms2.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" media="all" />
    {% endstylesheets %}
{% endblock %}
        
{% block content %}
<h1>Referee Classes</h1>
{% if msg %}
<p><em>{{ msg }}</em></p>
{% endif %}

<form class="s1" action="{{ path('zayso_natgames_classes') }}" method="post" {{ form_enctype(form) }}>
    <fieldset><legend><span>Contact Information</span></legend>
        {{ form_row(form.firstName) }}
        {{ form_row(form.lastName)  }}
        {{ form_row(form.email)     }}
        {{ form_row(form.cellPhone) }}
        {{ form_row(form.aysoid)    }}
        {{ form_row(form.region)    }}
    </fieldset>
    <fieldset><legend><span>Class Information</span></legend>
        {{ form_row(form.role)   }}
        {{ form_row(form.class)  }}
        {{ form_row(form.avail)  }}
        {{ form_row(form.notes) }}
    </fieldset>
    <fieldset>
        <div class="controls">
            <input type="submit" name="classesSubmit" value="Submit request to games committee and yourself" />
        </div>
    </fieldset>
{{ form_rest(form) }}
</form>

<h1>Instructions and Details</h1>
<h2>Background</h2>
<p>
    The National Games Referee Staff has received several requests from both instructors and potential students for 
    courses to be held as part of the National Games.  The timeframe for course presentation would be the Sunday, Monday, and Tuesday 
    (July 1-3) prior to the Games.  If that fits into your schedule and you would like to be part of a training opportunity, 
    please fill out the above form and press the submit button.
</p>
<h2>Regional Clinic</h2>
<p>
    Experienced referees who are not AYSO certified can become certified by:
</p>
    <ul class="info">
        <li>Filling out a volunteer form online at www.eayso.org</li>
        <li>Taking the AYSO Safe Haven training online at www.aysotraining.org</li>
        <li>Taking the Regional Course online at www.aysotraining.org</li>
        <li>Attending a Regional Clinic and passing a written test.</li>
    </ul>

<style>
ul.info
{
    list-style-type: circle;
    padding-left: 20px;
}
ul.info li
{
    margin-left: 10px;
}
</style>
        
{% endblock %}
