{% form_theme form 'ZaysoNatGamesBundle:Layout:fields.html.twig' %}

{% extends 'ZaysoNatGamesBundle:Layout:layout.html.twig' %}

{% block title %}NatGames - Person - Edit{% endblock %}

{% block content %}
{% set formPerson = form.person2 %}
{% set formAYSO   = formPerson.regAYSO %}
<div>
<form action="{{ path('zayso_core_person_person_edit', { 'id': personPerson.id }) }}" method="post" {{ form_enctype(form) }}>
<table border="1" style="width: 800px;">
<tr><th colspan="3">National Games 2012 Edit Person</th></tr>
<tr>
    <td style="width: 175px;">{{ form_label (formPerson.firstName) }}</td>
    <td style="width: 275px;">{{ form_widget(formPerson.firstName) }}</td>
    <td style="width: 350px;">
        Legal name, should match eAYSO.<br />
        {{ form_errors(formPerson.firstName) }}
    </td>
</tr>
<tr>
    <td> {{ form_label (formPerson.lastName) }}</td>
    <td> {{ form_widget(formPerson.lastName) }}</td>
    <td>
        Legal name, should match eAYSO.<br />
        {{ form_errors(formPerson.lastName) }}
    </td>
</tr>
<tr>
    <td> {{ form_label (formPerson.nickName) }}</td>
    <td> {{ form_widget(formPerson.nickName) }}</td>
    <td>
        Will be used for assignments.<br />
        {{ form_errors(formPerson.nickName) }}
    </td>
</tr>
<tr>
    <td> {{ form_label (formPerson.email) }}</td>
    <td> {{ form_widget(formPerson.email) }}</td>
    <td>
        Required.<br />
        {{ form_errors(formPerson.email) }}
    </td>
</tr>
<tr>
    <td> {{ form_label (formPerson.cellPhone) }}</td>
    <td> {{ form_widget(formPerson.cellPhone) }}</td>
    <td>
        Highly recommended.<br />
        Some text messages may be sent.<br />
        {{ form_errors(formPerson.cellPhone) }}
    </td>
</tr>
<tr><td colspan="3"></td></tr>
<tr>
    <td> {{ form_label (form.relation) }}</td>
    <td> {{ form_widget(form.relation) }}</td>
    <td>
        Contact administrator to change.<br />
        {{ form_errors(form.relation) }}
    </td>
</tr>
<tr>
    <td> {{ form_label (formAYSO.regKey) }}</td>
    <td> {{ form_widget(formAYSO.regKey) }}&nbsp;{{ form_widget(formAYSO.refBadge) }}</td>
    <td>
        Contact administrator to change.<br />
        {{ form_errors(formAYSO.regKey) }}
    </td>
</tr>
<tr>
    <td> {{ form_label (formAYSO.orgKey) }}</td>
    <td> {{ form_widget(formAYSO.orgKey) }}</td>
    <td>
        Contact administrator to change.<br />
        {{ form_errors(formAYSO.orgKey) }}
    </td>
</tr>
<tr>
  <td>&nbsp;</td>
  <td>&nbsp;</td>
  <td align="center"><input type="submit" name="accountPersonEditSubmit" value="Update Contact Information" />
</tr>
<tr><td colspan="3">{{ form_errors(form) }}</td></tr>
</table>
{{ form_rest(form) }}
</form>
</div>

{% endblock %}
