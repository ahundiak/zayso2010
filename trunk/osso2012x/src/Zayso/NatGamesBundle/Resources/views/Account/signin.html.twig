{% form_theme form 'ZaysoNatGamesBundle:Form:fields.html.twig' %}
{% extends 'ZaysoNatGamesBundle:Layout:layout.html.twig' %}

{% block title %}NatGames - Account - Signin{% endblock %}

{% block content %}
<div>
<form action="{{ path('zayso_natgames_account_signin') }}" method="post" {{ form_enctype(form) }}>
<table border="1" style="width: 700px;">
<tr><th colspan="3">National Games 2012 Sign In</th></tr>
<tr>
  <td style="width: 100px;">{{ form_label (form.userName) }}</td>
  <td style="width: 200px;">{{ form_widget(form.userName) }}</td>
  <td style="width: 300px;">{{ form_errors(form.userName) }}</td>
</tr>
<tr>
  <td style="width: 100px;">{{ form_label (form.userPass) }}</td>
  <td style="width: 200px;">{{ form_widget(form.userPass) }}</td>
  <td style="width: 300px;">{{ form_errors(form.userPass) }}</td>
</tr>
<tr>
  <td>&nbsp;</td>
  <td align="center"><input type="submit" name="accountSigninSubmit" value="Sign In" />
  <td>&nbsp;</td>
</tr>
<tr><td colspan="3">{{ form_errors(form) }}</td></tr>
</table>
{{ form_rest(form) }}
</form>
<br />
</div>
<h3>Sign In Using Social Network</h3>
<p>
Click on an icon below to sign using a social network account.  
You must have previously connected your zayso account to a social network account in your profile.
If you have not connected your account then sign in using the above form and click on the "View/Edit My Account Profile" link.
No more passwords to remember if you use a social account.
</p>
<iframe
  src="http://zayso.rpxnow.com/openid/embed?token_url={{ url('zayso_natgames_account_signin_rpx') }}"
  scrolling="no"  frameBorder="no"  allowtransparency="true"  style="width:400px;height:240px">
</iframe>
{% endblock %}
