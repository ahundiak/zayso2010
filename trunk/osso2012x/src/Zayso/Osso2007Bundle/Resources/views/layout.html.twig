<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html lang="en">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <link rel="stylesheet" href="{{ asset('css/layout.css') }}" type="text/css" media="all" />
  <link rel="stylesheet" href="{{ asset('css/osso.css') }}" type="text/css" media="all" />
  <link rel="stylesheet" href="{{ asset('css/menu.css') }}" type="text/css" media="all" />
  <title>{% block title %}Osso2007 Bundle{% endblock %}</title>
  <base href="http://localhost/osso2007x/" />
</head>

<body id="layout-body">
<div  id="layout-page">
<div  id="layout-banner">

<div id="layout-banner-left">
  <span>Zayso</span>
  <span>User: {{user.getName}}</span>
</div> <!-- Left Banner -->

<div id="layout-banner-right">
{% if user.isSignedIn %}
    <span><a href="{{ path('_osso2007_account_logout') }}">Logout</a></span>
{% else %}
    <span><a href="{{ path('_osso2007_account_login') }}">Login</a></span>
{% endif %}
</div> <!-- Right Banner -->

</div> <!-- Banner -->
<div id="layout-menu-top" style="clear: both;">
<ul>
  <li>
    <a href="">Home</a>
  </li>
{% if user.isAdmin() %}
    <li><a href="{{ path('_osso2007_admin_index') }}">Admin</a></li>
{% endif %}

</ul>
</div> <!-- Menu Top -->

<div id="layout-content">
  {% block content %}
  {% endblock %}
</div>

</div><!-- Body -->
</body>
</html>

