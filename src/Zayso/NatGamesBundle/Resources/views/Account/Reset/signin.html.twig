{% form_theme form 'ZaysoNatGamesBundle:Form:fields.html.twig' %}
{% extends 'ZaysoNatGamesBundle:Layout:layout.html.twig' %}

{% block title %}NatGames - Account - Reset{% endblock %}

{% block content %}
<div>
<form action="{{ path('zayso_natgames_account_resetx', { 'reset': reset }) }}" method="post" {{ form_enctype(form) }}>
<table border="1" style="width: 700px;">
<tr><th colspan="3">National Games 2012 Reset Password</th></tr>
<tr>
  <td style="width: 100px;">{{ form_label (form.userName) }}</td>
  <td style="width: 200px;">{{ form_widget(form.userName) }}</td>
  <td style="width: 300px;">{{ form_errors(form.userName) }}</td>
</tr>
<tr>
  <td style="width: 100px;">{{ form_label (form.userPass1) }}</td>
  <td style="width: 200px;">{{ form_widget(form.userPass1) }}</td>
  <td style="width: 300px;">{{ form_errors(form.userPass1) }}</td>
</tr>
<tr>
  <td style="width: 100px;">{{ form_label (form.userPass2) }}</td>
  <td style="width: 200px;">{{ form_widget(form.userPass2) }}</td>
  <td style="width: 300px;">{{ form_errors(form.userPass2) }}</td>
</tr>
<tr>
  <td>&nbsp;</td>
  <td align="center"><input type="submit" name="accountResetSubmit" value="Reset Password" />
  <td>&nbsp;</td>
</tr>
<tr><td colspan="3">{{ form_errors(form) }}</td></tr>
</table>
{{ form_rest(form) }}
</form>
</div>
{% endblock %}
