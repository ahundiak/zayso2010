{% extends myBundleName ~ ':Layout:layout.html.twig' %}

{% block title %}{{ myTitlePrefix }} Kicks {% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/zaysoarbiter/css/tourn.css') }}" media="all" />
{% endblock %}
{% block content %}
<h1>Kicks 2012 - Huntsville Alabama - October 19,20,21</h1>
{% if msg %}
<p><em>{{ msg }}</em></p>
{% endif %}
<form class="s1" action="{{ path('zayso_arbiter_tourn_kicks') }}" method="post" {{ form_enctype(form) }}>
    <fieldset><legend><span>Contact Information</span></legend>
        {{ form_row(form.firstName) }}
        {{ form_row(form.lastName)  }}
        {{ form_row(form.nickName)  }}
        {{ form_row(form.email)     }}
        {{ form_row(form.cellPhone) }}
        {{ form_row(form.homeCity)  }}
        {{ form_row(form.homeState) }}
    </fieldset>
    <fieldset><legend><span>USSF Referee Certification</span></legend>
        {{ form_row(form.ussfid)    }}
        {{ form_row(form.refBadge)  }}
        {{ form_row(form.refState)  }}
        {{ form_row(form.refExp)    }}
        {{ form_row(form.age)       }}
        {{ form_row(form.gender)    }}
    </fieldset>
    <fieldset><legend><span>Tournament Plans</span></legend>
         {{ form_row(form.assessmentRequest) }}
         {{ form_row(form.lodgingRequest)    }}
         {{ form_row(form.lodgingWith)       }}
         {{ form_row(form.travelingWith)     }}
         {{ form_row(form.teamAff)           }}
         {{ form_row(form.teamAffDesc)       }}
{#
         {{ form_row(form.levelToRef)        }}
         {{ form_row(form.comfortLevelCenter)    }}
         {{ form_row(form.comfortLevelAssistant) }}
#}
         {{ form_row(form.availFri) }}
         {{ form_row(form.availSat) }}
         {{ form_row(form.availSun) }}
         {{ form_row(form.notes) }}
    </fieldset>
    <fieldset>
        <div class="controls">
            <span>Emails your application to Art Hundiak and yourself.</span>
            <input type="submit" name="tournSubmit" value="Email Application" />
        </div>
    </fieldset>
{{ form_rest(form) }}
</form>
{% endblock %}
