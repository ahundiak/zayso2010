{% block field_errors %}
{% spaceless %}
    {% if errors|length > 0 %}
        {% set first = true %}
        {% for error in errors %}
            {% if first == false %}<br />{% endif %}
            <span style="color:red">{{ error.messageTemplate|trans(error.messageParameters, 'validators') }}</span>
            {% set first = false %}
        {% endfor %}
    {% endif %}
{% endspaceless %}
{% endblock field_errors %}
            
{% block checkbox_widget %}
{% spaceless %}
    <input type="checkbox" {{ block('widget_attributes') }}{% if value is defined %} value="{{ value }}"{% endif %}{% if checked %} checked="checked"{% endif %} />
{% endspaceless %}
{% endblock checkbox_widget %}
