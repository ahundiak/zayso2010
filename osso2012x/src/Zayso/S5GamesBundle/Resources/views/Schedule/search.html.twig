{% if searchForm is defined  %}
{% set form = searchForm     %}
<div class="schedule-search">
<form action="{{ path('zayso_core_schedule_referee_list') }}" method="post" {{ form_enctype(form) }}>
<table border="1">
<tr>  
        
    <td><table border="1"><tr>
    {% for item in form.dows %}
        <td align="center">{{ form_label(item) }}<br />{{ form_widget(item) }}</td>
    {% endfor %}
    <tr></table></td>
    
    <td><table border="1"><tr>
        <td>{{ form_widget(form.time1) }}<br />{{ form_widget(form.time2) }}</td>
    <tr></table></td>
    
    <td><table border="1"><tr>
    {% for item in form.ages %}
        <td align="center">{{ form_label(item) }}<br />{{ form_widget(item) }}</td>
    {% endfor %}
    <tr></table></td>
    
    <td><table border="1"><tr>
    {% for item in form.genders %}
        <td align="center">{{ form_label(item) }}<br />{{ form_widget(item) }}</td>
    {% endfor %}
    <tr></table></td>    
</tr>
<tr>
    <td colspan="2">{{ form_row(form.coach) }}</td>
    <td colspan="1">{{ form_row(form.official) }}</td>
    <td>
        <a href="{{ path('zayso_core_schedule_referee_list', { '_format' : 'csv'}) }}">CSV</a>
    </td>
</tr>

<tr><td colspan="5" align="right">
    <input type="submit" name="schSearchSubmit" value="Search" />
</td></tr>
</table>
{{ form_rest  (form) }}
</form>        
</div>
{% endif %}
