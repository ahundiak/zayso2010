<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html lang="en">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

  {% stylesheets output='css/*.css' filter='cssrewrite' debug=false
    '@ZaysoAreaBundle/Resources/public/css/area.css'
  %}
  <link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="all" />
  {% endstylesheets %}

{#
    'bundles/zaysoarea/css/area.css'
    'bundles/zaysoarea/css/area2.css'
#}

  <title>{% block title %}Area Bundle{% endblock %}</title>
</head>

<body>
<div id="layout-body">
<div id="layout-header">
  <a class="a-target-blank" href="http://soccer.org/events/national_games.aspx" target="_blank" title="Area 5C Home Page">
    <img class="logo1" src="{{ asset('bundles/zaysoarea/images/' ~ 'AysoLogo.gif') }}" height="50" width="50" alt="National Games Site"/>
  </a>
  <a class="a-target-blank" href="http://www.soccer.org" target="_blank" title="AYSO Home Page">
    <img class="logo2" src="{{ asset('bundles/zaysoarea/images/AysoLogo.gif') }}" height="50" width="50" alt="AYSO Site"/>
  </a>
  <div class="inner-block">
    <p style="text-align: center;">
      <span style="color: blue;">AYSO Area 5CF Referee Schedling Site</span>
    </p>
    <p style="margin-top: 2px; color: black; ">
      <span style="color: blue;">Zayso User: </span>
      <span style="color: greenx;">       
        {% if     is_granted('ROLE_USER') %}{{ app.user.name }} {{ app.user.getAYSOCertsDescription }}{% endif %}
        {% if not is_granted('ROLE_USER') %}Guest{% endif %}          
      </span>
    </p>
  </div>
</div>

<div id="layout-top-menu">
  <ul style="float:left ">
    <li><a href="{{ path('zayso_area_welcome') }}">Welcome</a></li>
    
{% if is_granted('ROLE_USER') %}
    <li><a href="{{ path('zayso_area_welcome') }}">Home</a></li>
{% endif %}
    
{% if not is_granted('ROLE_USER') %}    
    <li><a href="{{ path('zayso_area_welcome') }}">Create Account</a></li>
{% endif %}
    
    <li><a href="{{ path('zayso_area_welcome') }}">Game Schedule</a></li>
  </ul>
        
  <ul style="float: right">

{% if is_granted('ROLE_ADMIN') %}
    <li><a href="{{ path('zayso_area_welcome') }}">Admin</a></li>
{% endif %}
    
   <li><a href="{{ path('zayso_area_welcome') }}">Contact Us</a></li>
   
{% if is_granted('ROLE_USER') %}
   <li><a href="{{ path('zayso_area_welcome') }}">Sign Out</a></li>
{% endif %}
   
{% if not is_granted('ROLE_USER') %}
   <li><a href="{{ path('zayso_area_welcome') }}">Sign In</a></li>
{% endif %}          

  </ul>
  <div class="inner-block"></div>
</div>

<div id="layout-content">
  {% block content %}
  {% endblock %}
</div>

</div>
</body>
</html>

