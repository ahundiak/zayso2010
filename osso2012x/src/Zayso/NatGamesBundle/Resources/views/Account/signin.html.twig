{% extends 'NatGamesBundle::layout.html.twig' %}

{% block title %}NatGames - Account - Signin{% endblock %}

{% block content %}
<div>
<form method="post" action="{{ path('_natgames_account_signin') }}">
<input type="hidden" name="project_id" value="52" />
<table border="1" style="width: 800px;">
<tr><th colspan="3">National Games 2012 Sign In</th></tr>
<tr>
  <td style="width: 125px;">Account Name</td>
  <td style="width: 200px;">
    <input type="text" name="userName" size="40" value="{{ userName }}"/>
  </td>
  <td style="width: 375px;">
    Your account name.  <br />
  </td>
</tr>
<tr>
  <td style="width: 125px;">Password</td>
  <td style="width: 200px;">
    <input type="password" name="userPass" size="20" value=""/>
  </td>
  <td style="width: 375px;">Your Password</td>
</tr>
<tr>
  <td>&nbsp;</td>
  <td>&nbsp;</td>
  <td align="center"><input type="submit" name="accountSigninSubmit" value="Sign In" />
</tr>
{% if errors %}
<tr>
  <td colspan="3" style="color: red;">
  {% for error in errors %}
    {{ error }}</br>
  {% endfor %}
  </td>
</tr>
{% endif %}
</table>
</form>
<br />
</div>
{% endblock %}
