{% extends 'NatGamesBundle::layout.html.twig' %}

{% block title %}NatGames - Accounts{% endblock %}

{% block content %}
<div>
<table border="1">
    <tr>
        <th>ID</th>
        <th>Account</th>
        <th>Contact Info</th>
        <th>Region</th>
        <th>AYSO Info</th>
        <th>Attend</th>
        <th>Referee</th>
        <th></th>
    </tr>
    {% for member  in members %}
    {{ memberx.setMember(member) }}
    <tr>
        <td><a href="{{ path('_natgames_admin_account_edit', { 'id': member.id }) }}">{{ member.id }}</a></td>
        <td>{{ memberx.accountInfo | raw }}</td>
        <td>{{ memberx.contactInfo | raw }}</td>
        <td>{{ memberx.region    }}</td>
        <td>{{ memberx.aysoInfo | raw }}</td>
        <td>{{ memberx.getPlan('attend') }}</td>
        <td>{{ memberx.getPlan('will_referee') }}</td>

        <td><input type="checkbox" name="editData[selects][{{member.id}}]" value="{{member.id}}" /></td>
    </tr>
    {% endfor %}
</table>
</div>
{% endblock %}
